
<div class=container>
<div style="margin-top: 100px; margin-bottom:30px;">
<%= form_tag movies_path, :method => 'get' do %>
  <%= collection_select :genre, :genre_id, Genre.all, :genre_id, :name, {:include_blank=>true,  :selected => @selected_genre_id},{:class => "form-control", :onchange => "this.form.submit()", :style => "width: 60%;"} %>
<% end %>
</div>

<h2> Movies </h2>

<% if !@movies.any? %>
<div class="alert alert-warning" role="alert">
  No movies in this category
</div>
<% end %>


<%= paginate @movies %>
<br>

      <% @movies.each do |movie| %>
          <div style="display: inline-block; width: 500px; height:280px; margin-bottom:30px; margin-left:30px; " >
              <table class = "table" style="box-shadow: 0 2px 8px rgba(0,0,0,0.1)" >
                <tr>
                  <td><img src="https://image.tmdb.org/t/p/w185_and_h278_bestv2/<%= movie.poster_path %>" alt="Sem Poster" height="278" width="185"></td>
                  <td>
                    <table >
                      <tr>
                        <td><span style="font-weight:900; font-size: 14px"><%= movie.title %></span></td>
                      <tr>
                      <tr>
                        <td><span style="font-weight:150; font-size: 12px ;overflow: hidden; width:250px; display: -webkit-box; -webkit-line-clamp: 6; -webkit-box-orient: vertical;"><%= movie.overview %> </span></td>
                      <tr>
                        <tr>
                          <td><% if movie.adult? %> <button type="button" class="btn btn-danger">+18</button> <% end %></td>
                        <tr>
                    </table>
                  </td>

                </tr>
              </table>
          </div>
      <% end %>

      <%= paginate @movies %>

</div>


</div>
