<h1>Movies#index</h1>
<p>Find me in app/views/movies/index.html.erb</p>


<br>
<%= form_tag movies_path, :method => 'get' do %>
  <%= collection_select :genre, :genre_id, Genre.all, :genre_id, :name, prompt: true %>
  <%= submit_tag "look" %>
<% end %>

<%= params.inspect %>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.movie_id %></td>
        <td></td>

      </tr>
    <% end %>


  </tbody>
</table>


<br>
